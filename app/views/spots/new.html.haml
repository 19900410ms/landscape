= form_with(model: @spot, local: true) do |f|
  .div
    %h1.divv 観光スポット
    = f.text_field :name
  .div
    %h1.divv 地方区分
    = f.text_field :name
  .div
    %h1.divv 都道府県
    = f.text_field :name
  .div
    %h1.divv 住所
    = f.text_field :name
  .div
    %h1.divv 最寄駅
    = f.text_field :name
  .div
    %h1.divv おすすめ季節
    = f.text_field :name
  .div
    %h1.divv 休業日
    = f.text_field :name
  = f.fields_for :images do |image_form|
    .div
      %h1.divv title
      = image_form.file_field :image
  .btn
    = f.submit "create"